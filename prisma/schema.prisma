generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Usuario {
    id              String   @id @default(uuid())
    customer_id     String?  @unique
    nome            String   @db.VarChar(255)
    email           String   @unique @db.VarChar(120)
    senha           String   @db.Char(60)
    data_nascimento DateTime @db.Date
    premium         Int      @default(0) @db.TinyInt
    created_at      DateTime @default(now())
    updated_at      DateTime @updatedAt

    tokens Token[]
    metas Meta[]
}

model Token {
    id         String   @id @default(uuid())
    user_email String   @db.VarChar(120)
    created_at DateTime @default(now())

    email Usuario @relation(fields: [user_email], references: [email])
}

model Meta {
    id String @id @default(uuid())
    user_id String
    imagem_meta Bytes?
    tipo_imagem String?
    nome_meta String @db.VarChar(120)
    valor_meta Float
    valor_destinado Float
    periodo_deposito String
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    user Usuario @relation(fields: [user_id], references: [id])
}